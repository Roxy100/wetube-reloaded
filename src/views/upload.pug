extends base.pug

block content
    div 
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    //- /videos/upload url에 post request를 보낼 것.
    //- input에는 name이 있기 때문에,
    form(method="POST", enctype="multipart/form-data") 
        label(for="video") Video File 
        input(type="file", accept="video/*", id="video", name="video" required)
        input(placeholder="Title", required, type="text", name="title", maxlength=40)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/recorder.js")